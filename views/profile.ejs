<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/profile.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <div class="containerbox">
      <div class="cardbox">
        <div class="profile-picture">
          <img src="/images/profile.png" alt="Profile Picture" />
        </div>
        <h2 class="name"><%= user.fullname %></h2>
        <h3 class="username">@ <%= user.username %></h3>
        <p class="tagline">Some tag line any</p>
        <p class="description">some description can be any</p>
        <a href="/logout" class="button">Logout</a>
        <br />
        <br />
        <form action="/upload" method="post" enctype="multipart/form-data">
          <input type="text" name="filecaption" placeholder="some caption" />
          <input type="file" name="file" />
          <!-- mandatory for both type and name should be as "file" -->
          <button type="submit" class="upload-button">Upload</button>
        </form>
      </div>
    </div>

    <div class="container">
      <div class="cards-wrapper flex">
        <% user.posts.forEach(function(post) { %>
            <div class="card" style="width: 18rem">
                <img
                    src="/images/uploads/<%= post.image %>"
                    class="card-img-top"
                    alt="..."
                />
                <div class="card-body">
                    <h5 class="card-title"><%= post.imageText %></h5>
                </div>
            </div>
        <% }) %>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
